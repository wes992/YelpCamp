<% include ../partials/header %>


<div class='container'>
	<header class="jumbotron">
		<h1><span class='glyphicon glyphicon-tent'></span> Welcome Camp Goer! </h1>
		<p>View our hand-picked campgrounds from all over the World!</p>
		<p>
			<a class='btn btn-primary btn-lg' href='/campgrounds/new'>Add a New Campground!</a>
		</p>
	</header>

	<div class = 'row text-center flex-wrap' id='campground-grid'>
		<div class='col-lg-12'>
			<h3>Our Most Popular Campgrounds</h3>
				<% campgrounds.forEach(function(campground){ %>
				<div class='col-md-3 col-sm-6'>
					<a href='/campgrounds/<%= campground._id %>'>
						<div class='thumbnail'>
							<img src= "<%= campground.image %>">
						<div class='caption'>
							<h4><%= campground.name %></h4>
						</div>
											<!-- <p>
							<a class='btn btn-primary' href='/campgrounds/<%= campground._id %>'>More Info</a>
						</p> -->
						</div>
					</a>
				</div>
			<% }); %>
		</div>
	</div>	

</div>

<% include ../partials/footer %>
